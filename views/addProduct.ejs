  <!-- Font Awesome -->
  <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
	
	<div class="wrapper">
		
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
		<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->
			<a href="#" class="brand-link">
			  <img src="companylogo.jpg " 
				   alt="Fashion" 
				   class="brand-image img-circle elevation-3">
			  <span class="brand-text font-weight-light">Fashion Feet</span>
			</a>
			<!-- Sidebar -->
			<div class="sidebar">
			<!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <li class="nav-item">
          <a href="/create" class="nav-link">
            <i class="nav-icon far fa-circle text-info"></i>
            <p class="text">Add Product</p>
          </a>
          </li>
          <li class="nav-item">
          <a href="/remove" class="nav-link">
            <i class="nav-icon far fa-circle text-info"></i>
            <p class="text">Remove Product</p>
          </a>
          </li>
          <li class="nav-item">
          <a href="/update" class="nav-link">
            <i class="nav-icon far fa-circle text-info"></i>
            <p class="text">Update Stock</p>
          </a>
          </li>
          
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</aside>
        <!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			
			<section class="content-header">
				<h1>Fashion Feet Inventory Management</h1>
			</section>
			
			<section class="content">
				<div class="card">
          <div class="card-header">
            <!--h3 class="card-title">Stock Details</h3-->
            <div class="card-body table-responsive p-0" style="height: 400px;">

                <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">FootWear</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" action="/AddData">
                      <div class="card-body">
                        <div class="form-group">
                          <label for="">Enter Product Id:</label>
                          <input type="text" class="form-control" name="pid" placeholder="Product Id" >
                        </div>
                        <div class="form-group">
                          <label for="">Enter Product Name:</label>
                          <input  class="form-control" name="pname" placeholder="Product Name" type="text">
                        </div>
                        <div class="form-group">
                            <label for="">Enter Product Type:</label>
                            <input  class="form-control" name="ptype" placeholder="Product Type" type="text">
                          </div>
                          <div class="form-group">
                            <label for="">Enter Product Stock:</label>
                            <input  class="form-control" name="pstock" placeholder="Product Stock" type="text">
                          </div>
                          <div class="form-group">
                            <label for="">Enter Product Cost:</label>
                            <input  class="form-control" name="pcost" placeholder="Product Cost" type="text">
                          </div>
                    
                      <!-- /.card-body -->
      
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                    </form>
                  </div>
                  
</div>
<div class="card-tools">
<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
  <i class="fas fa-minus"></i></button>
<button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
  <i class="fas fa-times"></i></button>
</div>
</div>
</div>
</section>
</div>

</div>

